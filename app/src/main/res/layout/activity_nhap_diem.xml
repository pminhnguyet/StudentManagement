<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtTenMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên môn học" />

        <EditText
            android:id="@+id/edtSoTinChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số tín chỉ"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtNamHoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Năm học" />

        <EditText
            android:id="@+id/edtGiangVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giảng viên" />

        <EditText
            android:id="@+id/edtDiem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Điểm số"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnLuuMonHoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu môn học"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>